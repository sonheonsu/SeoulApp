<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#1a5677fc"
                android:endColor="#1a5677fc"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#00000000" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#1a5677fc"
                android:startColor="#1a5677fc"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#00000000" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#625677fc"
                android:startColor="#625677fc"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#00000000" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
